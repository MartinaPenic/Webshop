@model decimal

<div class="star-rating" function=>
    @{
        decimal rating = Model;
        for (int i = 0; i < 5; i++)
        {
            if (rating >= 1)
            {
                <i class="fa fa-star"></i>
                rating--;
            }
            else if (rating > 0)
            {
                <i class="fa fa-star-half-o"></i>
                rating = 0;
            }
            else
            {
                <i class="fa fa-star-o"></i>
            }
        }
    }
</div>