@model ItemDetailsViewModel

<section class="product-details">
    <div class="details-image-section">
        <img src="@Model.ImageUrl" alt="@Model.Title" />
    </div>
    <div class="details-section">
        <div class="details-content">
            <h4>@Model.Category</h4>
            <h4>@Model.Title</h4>
            <p>SKU:@Model.SKU BRAND:@Model.Brand </p>
            <partial name="~/Views/Shared/Partials/_StarRatingPartial.cshtml" for="AverageRating" />
            <h6>$@Model.Price</h6>
            <p>@Model.Description</p>

            <div class="details-body">
                <div class="size">
                    <div>Size:</div>
                    <div>@Model.Size</div>
                </div>
                <div class="color">
                    <div>Color:</div>
                    <div> @Model.Color</div>
                </div>

                <div class="quantity">
                    <div>Qty:</div>
                    <div class="counter">
                        <div>-</div>
                        <div>0</div>
                        <div>+</div>
                    </div>
                    <button class="btn-theme">ADD TO CART</button>
                </div>
                <div class="media-share">
                    <div>Share: </div>
                    <div> <partial name="~/Views/Shared/Partials/_MediaIconsPartial.cshtml" /> </div>
                </div>
            </div>
        </div>
    </div>
    <div class="rating-section">
        @if (Model?.ProductRatings != null)
        {
            @foreach (var item in Model.ProductRatings)
            {
                <partial name="~/Views/Shared/Partials/_RatingPartial.cshtml" model="item" />
            }
        }
    </div>
</section>
