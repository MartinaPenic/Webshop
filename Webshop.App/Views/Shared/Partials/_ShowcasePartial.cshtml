@model ShowcaseViewModel

@if (Model != null)
{
    <section class="showcase">
    <div class="container">
        <div class="content">
            <div class="title-2">@Model.Title</div>
            <div class="title-1">@Model.Description</div>
            <div class="title-3">@Model.Subtitle</div>
            <button class="btn-theme">@Model.ButtonCaption</button>
        </div>
        <div class="content-image">
            <img src="@Model.ImageUrl" alt="@Model.Title">
        </div>
    </div>
</section> 

}


